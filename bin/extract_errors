#!/usr/bin/env ruby

require 'nokogiri'
require 'set'
require 'pp'

# Parse a maven output file to generate an error file that vim can use in the quickfix window.
# This is a quick hack it will be cleaned up later

TEST_ISSUES_REGEX    = /^(?<method>.*?)[(](?<cls>.*?)[)].*?<<<\s*((?<err>E)RROR|(?<fail>F)AILURE)!\s*$/
COMPILE_ISSUES_REGEX = %r#^\[((?<err>E)RROR|(?<warn>W)ARNING)\]\s+(?<file>[\w/.-]+):\[(?<lnum>\d+),(?<col>\d+)\]\s*(?<msg>.*)$#
VIM_TYPE = { :compile_errors => 'E', :test_errors => 'E', :test_failures => 'E', :compile_warnings => 'W' }

def main(args)
  # parse args to allow the consumer to specify to output only compile errors, compile warnings, test errors, test
  # failures, compile errors and warnings, test errors and warnings, or everything
  types = [:compile_errors, :test_errors, :test_failures]  #default to just compile and test errors
  maven_output = args[0]
  input = File.open(maven_output)

  mvn_outcomes = mvn_failures input

  generate_vim_errorfile types, mvn_outcomes
end

def generate_vim_errorfile(allowed_types, outcomes)
  allowed_types.each { |type|
    results = outcomes.get_outcomes_for type
    next if results.empty?

    vim_type = VIM_TYPE[type]
    results.each { |result|
      puts "#{vim_type} #{result[:file]} #{result[:line]} #{result[:col]} #{result[:message]}"
    }
  }
end


